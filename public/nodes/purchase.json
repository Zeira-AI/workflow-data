{
  "type": "purchase",
  "label": "Sourcing Feasibility",
  "category": "analysis",
  "icon": "shopping-cart",
  "color": "amber",
  "description": "Evaluate supplier coverage, availability levels, and single-source risks for ingredients",
  "defaultInputs": [
    {
      "id": "ingredients",
      "name": "Ingredient List",
      "type": "array",
      "required": true,
      "description": "Manual list, uploaded list, or formula components"
    },
    {
      "id": "product_reference",
      "name": "Similar Product Reference",
      "type": "object",
      "description": "Reference by product link or name",
      "properties": {
        "link": { "type": "string" },
        "name": { "type": "string" }
      }
    }
  ],
  "defaultOutputs": [
    {
      "id": "sourcingData",
      "name": "Sourcing Data",
      "type": "array"
    },
    {
      "id": "riskSummary",
      "name": "Risk Summary",
      "type": "object"
    }
  ],
  "configSchema": [
    {
      "key": "targetUser",
      "type": "select",
      "label": "Target User",
      "options": [
        {"value": "under_12", "label": "Under 12"},
        {"value": "under_18", "label": "Under 18"},
        {"value": "18_30", "label": "18 - 30"},
        {"value": "middle_aged", "label": "Middle-aged"},
        {"value": "elderly", "label": "Elderly"}
      ],
      "defaultValue": "18_30"
    },
    {
      "key": "targetMarket",
      "type": "select",
      "label": "Target Market",
      "options": [
        {"value": "asia", "label": "Asia"},
        {"value": "europe", "label": "Europe"},
        {"value": "north_america", "label": "North America"},
        {"value": "south_america", "label": "South America"},
        {"value": "africa", "label": "Africa"},
        {"value": "oceania", "label": "Oceania"}
      ],
      "defaultValue": "asia"
    },
    {
      "key": "applicationRoute",
      "type": "select",
      "label": "Application Route",
      "options": [
        {"value": "oral", "label": "Oral"},
        {"value": "dental", "label": "Dental"},
        {"value": "topical", "label": "Topical"}
      ],
      "defaultValue": "topical"
    },
    {
      "key": "dosageForm",
      "type": "select",
      "label": "Dosage Form",
      "options": [
        {"value": "gel", "label": "Gel"},
        {"value": "cream", "label": "Cream"},
        {"value": "lotion", "label": "Lotion"},
        {"value": "ointment", "label": "Ointment"},
        {"value": "shampoo", "label": "Shampoo"},
        {"value": "foam", "label": "Foam"}
      ],
      "defaultValue": "cream"
    }
  ],
  "defaultConfig": {
    "targetUser": "18_30",
    "targetMarket": "asia",
    "applicationRoute": "topical",
    "dosageForm": "cream"
  }
}