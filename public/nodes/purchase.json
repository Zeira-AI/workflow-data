{
  "type": "purchase",
  "label": "Sourcing Feasibility",
  "category": "analysis",
  "icon": "shopping-cart",
  "color": "amber",
  "description": "Evaluate supplier coverage, availability levels, and single-source risks for ingredients",
  "defaultInputs": [
    {
      "id": "ingredients",
      "name": "Ingredient List",
      "type": "array",
      "required": true,
      "description": "List of ingredients or formula components to analyze"
    }
  ],
  "defaultOutputs": [
    {
      "id": "sourcingData",
      "name": "Sourcing Data",
      "type": "array",
      "description": "Detailed sourcing metrics per ingredient"
    },
    {
      "id": "riskSummary",
      "name": "Risk Summary",
      "type": "object",
      "description": "Summary of high-risk items and single-source flags"
    }
  ],
  "configSchema": [
    {
      "key": "region",
      "type": "select",
      "label": "Sourcing Region",
      "options": [
        {"value": "global", "label": "Global"},
        {"value": "na", "label": "North America"},
        {"value": "eu", "label": "Europe"},
        {"value": "asia", "label": "Asia"}
      ],
      "defaultValue": "global"
    },
    {
      "key": "includeOutdated",
      "type": "boolean",
      "label": "Include Cached Data",
      "description": "Allow use of cached sourcing data if live data is unavailable",
      "defaultValue": false
    },
    {
      "key": "riskThreshold",
      "type": "number",
      "label": "Single-Source Warning Threshold",
      "placeholder": "2",
      "defaultValue": 2
    }
  ],
  "defaultConfig": {
    "region": "global",
    "includeOutdated": false,
    "riskThreshold": 2
  }
}