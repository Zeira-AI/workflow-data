{
  "type": "bioactivity-prediction",
  "label": "Bioactivity Prediction",
  "category": "in-silico-screening",
  "icon": "activity",
  "color": "green",
  "description": "Predict compound bioactivity (pEC50 / pIC50) across multiple biological targets using ML-based models.",
  "defaultInputs": [
    {
      "id": "compoundList",
      "name": "Compound List",
      "type": "array",
      "required": true,
      "description": "List of compounds to be evaluated for bioactivity"
    },
    {
      "id": "targetList",
      "name": "Target List",
      "type": "array",
      "required": true,
      "description": "List of biological targets and assay types (EC50 / IC50)"
    }
  ],
  "defaultOutputs": [
    {
      "id": "bioactivityResults",
      "name": "Bioactivity Prediction Results",
      "type": "array",
      "description": "Predicted bioactivity values (pEC50 / pIC50) per compound per target"
    }
  ],
  "configSchema": [
    {
      "key": "modelType",
      "type": "select",
      "label": "Prediction Model",
      "options": [
        {
          "value": "dtign",
          "label": "DTIGN"
        }
      ],
      "defaultValue": "dtign"
    },
    {
      "key": "activityScale",
      "type": "select",
      "label": "Activity Scale",
      "options": [
        {
          "value": "pEC50",
          "label": "pEC50"
        },
        {
          "value": "pIC50",
          "label": "pIC50"
        }
      ]
    },
    {
      "key": "confidenceThreshold",
      "type": "number",
      "label": "Confidence Threshold",
      "placeholder": "Optional confidence cutoff (e.g. 0.7)"
    },
    {
      "key": "includeCensoredValues",
      "type": "boolean",
      "label": "Include Censored Values",
      "defaultValue": true
    }
  ]
}
