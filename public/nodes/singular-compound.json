{
  "type": "singular-compound",
  "label": "Wet Lab Validation",
  "category": "wet lab validation",
  "icon": "science",
  "color": "blue",
  "description": "General wet lab validation planning module for cosmetics, functional food/beverage, supplements, pharma, and adjacent categories. Produces a study roadmap based on product specs, compliance expectations, methods, budget, and timeline constraints.",
  "defaultInputs": [
    {
      "id": "input_data",
      "name": "Input Data",
      "type": "object",
      "required": true,
      "description": "Initial product/specification data and study assumptions (may include formula/composition, specs, and constraints)."
    }
  ],
  "defaultOutputs": [
    {
      "id": "validation_plan",
      "name": "Validation Plan",
      "type": "object",
      "description": "Generated wet lab validation plan (tests, methods, sampling schedule, acceptance criteria, budget fit, and timeline)."
    },
    {
      "id": "risk_assumptions",
      "name": "Risks & Assumptions",
      "type": "object",
      "description": "Key risks, gaps, and assumptions identified from inputs (no inferred data)."
    }
  ],
  "configSchema": [
    {
      "key": "industry",
      "type": "select",
      "label": "Industry",
      "options": [
        { "value": "cosmetics", "label": "Cosmetics / Personal Care" },
        { "value": "functional_food", "label": "Functional Food / Beverage" },
        { "value": "pharma", "label": "Pharmaceutical" },
        { "value": "supplement", "label": "Dietary Supplement" },
        { "value": "other", "label": "Other" }
      ]
    },
    {
      "key": "industryOther",
      "type": "text",
      "label": "Specify Industry",
      "placeholder": "Only if you selected Other"
    },
    {
      "key": "productType",
      "type": "select",
      "label": "Product Type",
      "options": [
        { "value": "topical", "label": "Topical" },
        { "value": "oral_solid", "label": "Oral Solid (tablet/capsule/powder)" },
        { "value": "oral_liquid", "label": "Oral Liquid (drink/syrup/suspension)" },
        { "value": "injectable", "label": "Injectable / Parenteral" },
        { "value": "ocular", "label": "Ocular" },
        { "value": "nasal", "label": "Nasal" },
        { "value": "inhalation", "label": "Inhalation" },
        { "value": "other", "label": "Other" }
      ]
    },
    {
      "key": "productTypeOther",
      "type": "text",
      "label": "Specify Product Type",
      "placeholder": "Only if you selected Other"
    },
    {
      "key": "validationObjective",
      "type": "multiselect",
      "label": "Validation Objective(s)",
      "placeholder": "Select one or more validation goals",
      "options": [
        { "value": "stability", "label": "Stability / Shelf-life" },
        { "value": "microbial", "label": "Microbiological / Preservative Effectiveness" },
        { "value": "performance", "label": "Performance / Efficacy (lab-based)" },
        { "value": "safety", "label": "Safety Screening" },
        { "value": "compatibility", "label": "Packaging / Container Compatibility" },
        { "value": "process", "label": "Process / Scale-up / Manufacturability" },
        { "value": "regulatory", "label": "Regulatory Substantiation" }
      ],
      "multiple": true
    },
    {
      "key": "targetClaims",
      "type": "text",
      "label": "Target Claims / Intended Outcomes",
      "placeholder": "e.g. 12-month shelf-life at 25°C; potency within spec; microbial limits pass"
    },
    {
      "key": "regulatoryClassification",
      "type": "multiselect",
      "label": "Regulatory Classification",
      "options": [
        { "value": "cosmetic", "label": "Cosmetic" },
        { "value": "food", "label": "Food / Beverage" },
        { "value": "supplement", "label": "Dietary Supplement" },
        { "value": "otc", "label": "OTC / Non-Prescription Drug" },
        { "value": "rx", "label": "Prescription Drug" },
        { "value": "medical_device", "label": "Medical Device" },
        { "value": "unknown", "label": "Not Sure / TBD" }
      ],
      "multiple": true
    },
    {
      "key": "complianceLevel",
      "type": "multiselect",
      "label": "Compliance Level",
      "options": [
        { "value": "rd", "label": "R&D / Exploratory" },
        { "value": "qc", "label": "QC / Release Support" },
        { "value": "gmp", "label": "GMP-aligned" },
        { "value": "glp", "label": "GLP (non-clinical)" }
      ],
      "defaultValue": ["rd"],
      "multiple": true
    },
    {
      "key": "formulaReference",
      "type": "text",
      "label": "Sample / Formula Reference",
      "placeholder": "Name or ID"
    },
    {
      "key": "formulaDocument",
      "type": "file",
      "label": "Upload Formula / Composition / Spec Document",
      "accept": ".pdf,.doc,.docx,.xls,.xlsx,.csv"
    },
    {
      "key": "physicalForm",
      "type": "multiselect",
      "label": "Physical Form",
      "options": [
        { "value": "solution", "label": "Solution" },
        { "value": "suspension", "label": "Suspension" },
        { "value": "emulsion", "label": "Emulsion" },
        { "value": "gel", "label": "Gel" },
        { "value": "powder", "label": "Powder" },
        { "value": "tablet", "label": "Tablet" },
        { "value": "capsule", "label": "Capsule" },
        { "value": "other", "label": "Other" }
      ],
      "multiple": true
    },
    {
      "key": "criticalQualityAttributes",
      "type": "json",
      "label": "Critical Quality Attributes (CQA)",
      "placeholder": "{ \"assay\": \"95-105%\", \"pH\": \"5.0-5.5\", \"appearance\": \"no phase separation\" }"
    },
    {
      "key": "doseOrServing",
      "type": "text",
      "label": "Dose / Serving Information",
      "placeholder": "e.g. 2 capsules/day; 30 mL per serving; apply 1 g/day"
    },
    {
      "key": "packagingType",
      "type": "text",
      "label": "Packaging / Container Type",
      "placeholder": "e.g. PET bottle, glass vial, blister, jar, tube, sachet"
    },
    {
      "key": "packagingMaterial",
      "type": "text",
      "label": "Packaging Material",
      "placeholder": "e.g. PET, PP, glass, aluminum foil, PVC/PVDC"
    },
    {
      "key": "testTypes",
      "type": "multiselect",
      "label": "Required Test Types",
      "options": [
        { "value": "stability_real_time", "label": "Real-time Stability" },
        { "value": "stability_accelerated", "label": "Accelerated Stability" },
        { "value": "freeze_thaw", "label": "Freeze–Thaw / Thermal Cycling" },
        { "value": "micro_limits", "label": "Microbial Limits / Bioburden" },
        { "value": "preservative_effectiveness", "label": "Preservative Effectiveness / Challenge Test" },
        { "value": "assay_potency", "label": "Assay / Potency" },
        { "value": "dissolution", "label": "Dissolution / Disintegration" },
        { "value": "organoleptic", "label": "Organoleptic (taste/odor/appearance)" },
        { "value": "compatibility_leachables", "label": "Extractables & Leachables" },
        { "value": "performance_invitro", "label": "Performance (in vitro / bench test)" },
        { "value": "contaminants", "label": "Contaminants (heavy metals, pesticides, etc.)" }
      ],
      "multiple": true
    },
    {
      "key": "testStandards",
      "type": "text",
      "label": "Standards / Methods to Follow",
      "placeholder": "e.g. ICH Q1A; USP; ISO 11930; AOAC; internal SOP IDs"
    },
    {
      "key": "storageConditions",
      "type": "text",
      "label": "Storage / Test Conditions",
      "placeholder": "e.g. 25°C/60%RH; 40°C/75%RH; refrigerated; light exposure"
    },
    {
      "key": "testDuration",
      "type": "text",
      "label": "Test Duration",
      "placeholder": "e.g. 3 months accelerated + 12 months real-time"
    },
    {
      "key": "samplingSchedule",
      "type": "text",
      "label": "Sampling Schedule",
      "placeholder": "e.g. T0, 2w, 1M, 3M, 6M, 12M"
    },
    {
      "key": "acceptanceCriteria",
      "type": "json",
      "label": "Acceptance Criteria",
      "placeholder": "{ \"assay\": \"95-105%\", \"microLimits\": \"USP <61>/<62>\", \"appearance\": \"no change\" }"
    },
    {
      "key": "budgetMin",
      "type": "number",
      "label": "Minimum Budget",
      "placeholder": "e.g. 5000"
    },
    {
      "key": "budgetMax",
      "type": "number",
      "label": "Maximum Budget",
      "placeholder": "e.g. 15000"
    },
    {
      "key": "timelineConstraint",
      "type": "text",
      "label": "Timeline Constraint",
      "placeholder": "e.g. Results needed by June 30"
    },
    {
      "key": "labPreference",
      "type": "select",
      "label": "Lab Preference",
      "options": [
        { "value": "internal", "label": "Internal Lab" },
        { "value": "external", "label": "External Lab / CRO" },
        { "value": "either", "label": "Either" }
      ],
      "defaultValue": "either"
    },
    {
      "key": "additionalNotes",
      "type": "text",
      "label": "Additional Notes / Known Risks",
      "placeholder": "e.g. Light-sensitive active; prior stability failure; limited sample quantity"
    }
  ],
  "defaultConfig": {
    "industry": "functional_food",
    "productType": "oral_liquid",
    "validationObjective": ["stability"],
    "regulatoryClassification": ["food"],
    "complianceLevel": ["rd"],
    "labPreference": "either"
  }
}
