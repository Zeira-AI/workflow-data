{
  "type": "candidate-library",
  "label": "Candidate Library",
  "category": "library",
  "icon": "book-open-text",
  "color": "blue",
  "description": "Build a customized compound library of 30+ candidates based on biological intent and selected sources.",
  "defaultInputs": [
    {
      "id": "search_keyword",
      "name": "Search Keyword",
      "type": "string",
      "required": true,
      "tooltip": "Short text that anchors the search (e.g. \"natural flavonoids\", \"peptides\")."
    },
    {
      "id": "biological_effects",
      "name": "Biological Effects",
      "type": "string",
      "required": true,
      "tooltip": "Comma‑separated desired effects (e.g. \"antioxidant, anti-inflammatory\")."
    },
    {
      "id": "target_proteins",
      "name": "Target Protein(s)",
      "type": "string",
      "required": false,
      "tooltip": "Optional list of protein targets to focus the search (e.g. GSK3B, PDE1A)."
    },
    {
      "id": "scientific_description",
      "name": "Scientific Description",
      "type": "string",
      "required": false,
      "tooltip": "Free‑text background or hypotheses the library should reflect."
    }
  ],
  "defaultOutputs": [
    {
      "id": "name",
      "name": "Name",
      "type": "string",
      "tooltip": "Compound name or identifier (e.g. \"Quercetin\", \"Kaempferol\", \"Minoxidil\")."
    },
    {
      "id": "vecurate_link",
      "name": "Vecurate Link",
      "type": "string",
      "tooltip": "URL link to the compound entry in the Vecurate database"
    },
    {
      "id": "eu_cosing",
      "name": "EU CoSing",
      "type": "string",
      "tooltip": "URL link to the compound entry in the EU CosIng database for cosmetic ingredient regulation"
    },
    {
      "id": "smiles",
      "name": "SMILES",
      "type": "string",
      "tooltip": "SMILES string representing the compound's chemical structure."
    }
  ],
  "configSchema": [
    {
      "key": "library_sources",
      "type": "select",
      "label": "Primary Source",
      "options": [
        { "value": "vecurate", "label": "Vecurate" },
        { "value": "vecurate_excerpt", "label": "Vecurate Excerpt (25 compounds)" },
        { "value": "eu_cosing", "label": "EU CoSing" },
        { "value": "pubchem", "label": "PubChem" },
        { "value": "chembl", "label": "ChEMBL" },
        { "value": "drugbank", "label": "DrugBank" },
        { "value": "drugs_com", "label": "Drugs.com" },
        { "value": "fda", "label": "FDA" },
        { "value": "nih", "label": "NIH" },
        { "value": "unii", "label": "UNII" },
        { "value": "chemspider", "label": "ChemSpider" },
        { "value": "cas", "label": "CAS" }
      ],
      "tooltip": "Choose the main database to pull candidate structures from."
    },
    {
      "key": "ingredientListFile",
      "type": "file",
      "label": "Or upload Compound List",
      "accept": ".pdf,.doc,.docx,.txt,.csv",
      "tooltip": "Upload your own compound list; parsed names/SMILES will be merged into the library."
    }
  ],
  "defaultConfig": {
    "library_sources": "vecurate",
    "export_config": { "format": "csv" },
