{
  "type": "candidate-library",
  "label": "Candidate Library",
  "category": "library",
  "icon": "book-open-text",
  "color": "blue",
  "description": "Build a customized compound library of 30+ candidates based on biological intent and selected sources.",
  "defaultInputs": [
    {
      "id": "search_keyword",
      "name": "Search Keyword",
      "type": "string",
      "required": true,
      "description": "e.g., 'Natural Flavonoids'"
    },
    {
      "id": "biological_effects",
      "name": "Biological Effects",
      "type": "string",
      "required": true,
      "description": "e.g., 'Antioxidant, Anti-inflammatory'"
    },
    {
      "id": "target_proteins",
      "name": "Target Protein(s)",
      "type": "string",
      "required": false,
      "description": "Optional if Scientific Description is provided"
    },
    {
      "id": "scientific_description",
      "name": "Scientific Description",
      "type": "string",
      "required": false,
      "description": "Free-text context for rationale generation"
    }
  ],
  "defaultOutputs": [
    {
      "id": "candidate_library",
      "name": "Candidate Library Table",
      "type": "array",
      "description": "List of compounds with name, nyb_link, eu_cosing, and smiles"
    }
  ],
  "configSchema": [
    {
      "key": "library_sources",
      "type": "select",
      "label": "Primary Source",
      "options": [
        { "value": "nyb", "label": "NYB Database" },
        { "value": "eu_cosing", "label": "EU CoSing" }
      ]
    },
    {
      "key": "ingredientListFile",
      "type": "file",
      "label": "Upload Compound List",
      "accept": ".pdf,.doc,.docx,.txt,.csv"
    }
  ],
  "defaultConfig": {
    "library_sources": "nyb",
    "export_config": { "format": "csv" },
