{
  "type": "toxicity-filter",
  "label": "toxicity-filter",
  "category": "analysis",
  "icon": "filtericon",
  "color": "red",
  "description": "Filter compounds based on SMILES data and physicochemical thresholds.",
  "defaultInputs": [
    {
      "id": "input-mol-data",
      "name": "Input Compounds",
      "type": "array",
      "required": true,
      "description": "Array containing compound data and SMILES strings from CSV"
    }
  ],
  "defaultOutputs": [
    {
      "id": "output-filtered",
      "name": "Filtered Results",
      "type": "array",
      "description": "Output data containing filtered compound results"
    }
  ],
  "configSchema": [
    {
      "key": "smiles_column",
      "type": "text",
      "label": "SMILES",
      "placeholder": "Enter SMILES.",
      "description": "Select the column containing the SMILES strings"
    },
    {
      "key": "ingredientListFile",
      "type": "file",
      "label": "Upload Ingredient List Document",
      "accept": ".pdf,.doc,.docx,.txt,.csv"
    },
    {
      "key": "mw_threshold",
      "type": "number",
      "label": "MW Threshold",
      "defaultValue": 400
    },
    {
      "key": "logp_threshold",
      "type": "number",
      "label": "logP Threshold",
      "defaultValue": 4.0
    },
     {
      "key": "TPSA_threshold",
      "type": "number",
      "label": "TPSA Threshold",
      "defaultValue": 60
    },
    {
      "key": "HBD_threshold",
      "type": "number",
      "label": "HBD Threshold",
      "defaultValue": 4.0
    },
    {
      "key": "HBA_threshold",
      "type": "number",
      "label": "HBA Threshold",
      "defaultValue": 3.0
    },
    {
      "key": "RotB_threshold",
      "type": "number",
      "label": "RotB Threshold",
      "defaultValue": 4.0
    }
  ],
  "defaultConfig": {
    "smiles_column": "smiles",
    "mw_threshold": 300,
    "logp_threshold": 3.0,
    "mapping": {
      "name": "name",
      "smiles": "smiles",
      "MW_Da": "MW_Da",
      "logP": "logP",
      "TPSA": "TPSA",
      "HBD": "HDB",
      "HBA": "HDA",
      "RotB": "RotB"

    }
  }
}