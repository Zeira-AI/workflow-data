{
  "type": "formulate",
  "label": "Formulate",
  "category": "analysis",
  "icon": "flask",
  "color": "purple",
  "description": "Analyze and deformulate product compositions based on specific requirements",
  "outputMockLabel": "1013 items",
  "defaultInputs": [],
  "defaultOutputs": [
    {
      "id": "id",
      "name": "id",
      "type": "string",
      "description": "Formulation ID"
    },
    {
      "id": "inci",
      "name": "INCI",
      "type": "string",
      "description": "INCI name"
    },
    {
      "id": "functions",
      "name": "Functions",
      "type": "string",
      "description": "Functions of the ingredient in the formulation"
    },
    {
      "id": "estimatedPercent",
      "name": "Estimated Percent",
      "type": "string",
      "description": "Estimated percentage of the ingredient in the formulation"
    }
  ],
  "configSchema": [
    {
      "key": "ingredientList",
      "type": ["text", "file"],
      "label": "Ingredient List",
      "placeholder": "Select or upload a list of ingredients...",
      "suggestedField": ["smiles", "name", "ingredient_name", "inci_name"],
      "tooltip": "Select or upload a list of ingredients.\nSupported formats: **TXT**, **CSV**, **SMILES**.",
      "accept": ".txt,.csv,.smi"
    },
    {
      "key": "targetRegion",
      "type": "select",
      "label": "Target Region",
      "options": [
        { "value": "GLOBAL", "label": "Global / Default" },
        { "value": "EU", "label": "EU" },
        { "value": "US", "label": "US" },
        { "value": "UK", "label": "UK" },
        { "value": "ASEAN", "label": "ASEAN" }
      ],
      "defaultValue": "GLOBAL"
    },
    {
      "key": "scaleTier",
      "type": "select",
      "label": "Scale Tier",
      "options": [
        { "value": "rnd", "label": "R&D (Small Batches)" },
        { "value": "pilot", "label": "Pilot" },
        { "value": "production", "label": "Production / Scale" }
      ],
      "defaultValue": "pilot"
    },
    {
      "key": "referenceProduct",
      "type": "text",
      "label": "Similar Product (Link/Name)",
      "placeholder": "Paste product link or name here..."
    },
    {
      "key": "desiredEffect",
      "type": "text",
      "label": "Desired Effect (Required)",
      "placeholder": "e.g., Whitening, Anti-aging..."
    },
    {
      "key": "options",
      "type": "json",
      "label": "Advanced Options",
      "placeholder": "{ \"target user\": \"baby\", \"application route\": \"topical\", \"dosage form\": \"cream\" }"
    }
  ]
}
