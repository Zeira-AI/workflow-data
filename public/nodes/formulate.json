{
  "type": "formulate",
  "label": "Formulate",
  "category": "analysis",
  "icon": "flask",
  "color": "purple",
  "description": "Analyze and deformulate product compositions based on specific requirements",
  "defaultInputs": [],
  "defaultOutputs": [
    {
      "id": "ingredients",
      "name": "ingredients",
      "type": "array",
      "description": "List of formulated ingredients"
    },
    {
      "id": "analysis",
      "name": "analysis",
      "type": "object",
      "description": "Formula analysis and safety report"
    }
  ],
  "configSchema": [
    {
      "key": "ingredientListText",
      "type": "text",
      "label": "Ingredient List (Text)",
      "placeholder": "Paste ingredient list here."
    },
    {
      "key": "ingredientListFile",
      "type": "file",
      "label": "Upload Ingredient List Document",
      "accept": ".pdf,.doc,.docx,.txt,.csv"
    },
    {
      "key": "targetRegion",
      "type": "select",
      "label": "Target Region",
      "options": [
        { "value": "GLOBAL", "label": "Global / Default" },
        { "value": "EU", "label": "EU" },
        { "value": "US", "label": "US" },
        { "value": "UK", "label": "UK" },
        { "value": "ASEAN", "label": "ASEAN" }
      ],
      "defaultValue": "GLOBAL"
    },
    {
      "key": "scaleTier",
      "type": "select",
      "label": "Scale Tier",
      "options": [
        { "value": "rnd", "label": "R&D (Small Batches)" },
        { "value": "pilot", "label": "Pilot" },
        { "value": "production", "label": "Production / Scale" }
      ],
      "defaultValue": "pilot"
    },
    {
      "key": "referenceProduct",
      "type": "text",
      "label": "Similar Product (Link/Name)",
      "placeholder": "Paste product link or name here..."
    },
    {
      "key": "desiredEffect",
      "type": "text",
      "label": "Desired Effect (Required)",
      "placeholder": "e.g., Whitening, Anti-aging..."
    },
    {
      "key": "options",
      "type": "json",
      "label": "Advanced Options",
      "placeholder": "{ \"target user\": \"baby\", \"application route\": \"topical\", \"dosage form\": \"cream\" }"
    }
  ],
  "defaultConfig": {
    "ingredientListText": "",
    "ingredientListFile": null,
    "targetRegion": "GLOBAL",
    "scaleTier": "pilot",
    "referenceProduct": "",
    "desiredEffect": "",
    "options": {
      "target user": "",
      "application route": "topical",
      "dosage_form": "cream"
    }
  }
}